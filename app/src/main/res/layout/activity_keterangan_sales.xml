<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".distributor.sales.keterangan_sales">

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/bg2"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btnbgclick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Keterangan Sales"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

        <Button
            android:id="@+id/btndaftarsales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreybesar"
            android:text="Daftar Sales"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnoutletsales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreybesar"
            android:text="Outlet Sales"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnnotasales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreybesar"
            android:text="Nota Sales"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnbonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreybesar"
            android:text="Bonus"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>