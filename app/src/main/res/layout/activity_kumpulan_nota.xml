<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".distributor.sales.kumpulan_nota">

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg2"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btnbgclick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Nota"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>



        <Button
            android:id="@+id/btnnotajalan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreybesar"
            android:text="Nota Jalan"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnnotapenjualan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreybesar"
            android:text="Nota Penjualan"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnnotaretur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreybesar"
            android:text="Nota Retur"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnnotatandaterima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreybesar"
            android:text="Nota Tanda Terima"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnpembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreybesar"
            android:text="Nota Pembayaran"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>